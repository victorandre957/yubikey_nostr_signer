FROM rust:1.89-slim

RUN apt-get update && apt-get install -y \
    pkg-config \
    libpcsclite-dev \
    libudev-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY Cargo.toml Cargo.lock ./
COPY src ./src
COPY examples ./examples
COPY .env ./

RUN cargo build --release --example bunker_client

CMD ["/bin/bash"]
